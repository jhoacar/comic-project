{
  "name": "comic-project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "install-all": "npm run install-client && npm run install-server",
    "install-client": "cd client && npm ci",
    "install-server": "cd server && npm ci",
    "start": "npm run start-server",
    "start-server": "npm start --prefix server",
    "build": "npm run install-all && npm run build-client",
    "build-client": "npm run build --prefix client",
    "build-server": "npm run build --prefix server",
    "dev": "concurrently \"npm:dev-*\"",
    "dev-client": "env-cmd -f client.env npm start --prefix client",
    "dev-server": "env-cmd -f server.env npm run dev --prefix server",
    "dev-watch-server": "npm run watch --prefix server"
  },
